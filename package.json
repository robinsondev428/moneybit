{
  "name": "ledgerman",
  "version": "0.7.0",
  "description": "A Cli tool for creating a general ledger from the journal.",
  "main": "src/index.js",
  "bin": {
    "ldm": "bin/ldm.js"
  },
  "scripts": {
    "test": "mocha src/{,**/}__tests__/**",
    "lint": "standard",
    "clean": "rimraf doc coverage",
    "cov": "nyc --reporter=lcov npm test && open coverage/lcov-report/index.html",
    "codecov": "nyc --reporter=lcov npm test && codecov",
    "prepublish": "npm run clean",
    "demo": "node src/bin/ldm.js --journal samples/journal.yml --chart samples/chart.yml",
    "demo-monthly": "node src/bin/ldm.js monthly --journal samples/journal.yml --chart samples/chart.yml",
    "demo-bs": "node src/bin/ldm.js bs --journal samples/journal.yml --chart samples/chart.yml",
    "demo-update": "node src/bin/ldm.js --journal samples/journal.yml --chart samples/chart.yml > samples/ledger.yml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kt3k/ledgerman.git"
  },
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^3.2.5",
    "minimisted": "^1.1.1",
    "moment": "^2.11.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "codecov": "^2.0.2",
    "dirty-chai": "^1.2.2",
    "mocha": "^3.2.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.2",
    "standard": "^9.0.1"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
